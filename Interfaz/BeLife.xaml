                    </Button>
                </Grid>
                <DataGrid x:Name="dtgMostrarContratos" Margin="300,50,50,50" MouseDoubleClick="DtgMostrarContratos_MouseDoubleClick" IsReadOnly="True">
                    <DataGrid.Columns>
                        <materialDesign:DataGridTextColumn Header="N° Contrato" Binding="{Binding Numero}" Width="118.72"/>
